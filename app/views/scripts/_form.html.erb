<%= form_for(@script) do |f| %>
  <% if @script.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@script.errors.count, "error") %> prohibited this script from being saved:</h2>

      <ul>
      <% @script.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table class="edit_form">
    <tr>
      <td class="form_header"><%= f.label t('name') %></td>
      <td><%= f.text_field :name, :size => 30 %></td>
    </tr>

    <tr>
      <td class="form_header"><%= f.label t('description') %></td>
      <td><%= f.text_area :description %></td>
    </tr>

    <tr>
      <td class="form_header"><%= f.label t('date.begin')%></td>
      <td><%= f.text_field :beginDate %></td>
    </tr>

    <tr>
      <td class="form_header"><%= f.label t('date.end') %></td>
      <td><%= f.text_field :endDate %></td>
    </tr>

  </table>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
